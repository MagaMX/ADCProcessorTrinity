<Window x:Class="ADCProcessorTrinity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADCProcessorTrinity"
        mc:Ignorable="d"
        Title="ADC Signal Processor" Height="450" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="tb_FilePath" HorizontalAlignment="Center" Margin="0,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350"/>
        <Button x:Name="btn_Process" Content="Обработать сигнал" HorizontalAlignment="Center" Margin="0,245,0,0" VerticalAlignment="Top" Click="btn_Process_Click"/>
        <Button x:Name="btn_FileSelect" Content="Выбрать файл" HorizontalAlignment="Left" Margin="589,178,0,0" VerticalAlignment="Top" Click="btn_FileSelect_Click"/>
        <RadioButton x:Name="radbtn_SaveTxtOnly" Content="Сохранить только в текстовом виде" HorizontalAlignment="Left" Margin="225,205,0,0" VerticalAlignment="Top" Checked="radbtn_SaveTxtOnly_Checked"/>
        <RadioButton x:Name="radbtn_SaveBinaryOnly" Content="Сохранить только в бинарном виде" HorizontalAlignment="Left" Margin="225,225,0,0" VerticalAlignment="Top" Checked="radbtn_SaveBinaryOnly_Checked"/>
    </Grid>
</Window>
